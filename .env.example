# Frontend Environment Variables (Vite)
# Copy this file to .env.local and fill in your actual values
# Note: All Vite environment variables must be prefixed with VITE_

# Medusa Backend URL (Update for production)
VITE_MEDUSA_BACKEND_URL=http://localhost:9000

# Medusa Publishable API Key (Get from Medusa Admin)
VITE_MEDUSA_PUBLISHABLE_KEY=pk_your_publishable_key_here

# Storefront Base URL (Update for production)
VITE_BASE_URL=http://localhost:3000

# Default Region (ISO-2 lowercase format)
VITE_DEFAULT_REGION=za

# Payment Provider Keys (Optional - Stripe if you add it)
VITE_STRIPE_KEY=

# Medusa Payments (Optional)
VITE_MEDUSA_PAYMENTS_PUBLISHABLE_KEY=
VITE_MEDUSA_PAYMENTS_ACCOUNT_ID=

# Medusa Cloud S3 (Optional - for image optimization)
VITE_MEDUSA_CLOUD_S3_HOSTNAME=
VITE_MEDUSA_CLOUD_S3_PATHNAME=

# Monitoring & Analytics (Optional)
VITE_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_ENABLE_ANALYTICS=true
